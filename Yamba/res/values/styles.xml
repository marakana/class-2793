<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/android</item>
    </style>

    <style name="yamba_main">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/dk_grey</item>
    </style>
    
    <style name="yamba_large_bold" parent="style/yamba_main">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="yamba_medium_bold" parent="style/yamba_main">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="yamba_small" parent="style/yamba_main">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="yamba_small_bold" parent="style/yamba_small">
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>