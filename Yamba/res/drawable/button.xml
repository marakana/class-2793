<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <gradient
        android:angle="270"
        android:endColor="@color/bright_green"
        android:startColor="@color/mid_green" />

    <stroke
        android:width="1dp"
        android:color="@color/mid_green" />

    <padding
        android:bottom="7dp"
        android:left="32dp"
        android:right="32dp"
        android:top="7dp" />

    <corners
        android:bottomLeftRadius="11dp"
        android:bottomRightRadius="11dp"
        android:topLeftRadius="11dp"
        android:topRightRadius="11dp" />

</shape>